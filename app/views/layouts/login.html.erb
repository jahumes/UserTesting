<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= content_for?(:title) ? yield(:title) : "Usertesting" %></title>
  <meta name="description" content=""/>
  <meta name="author" content=""/>

  <%= stylesheet_link_tag    "all/bootstrap.min", :media => "all" %>
  <%= stylesheet_link_tag    "all/js-plugins/uniform.default", :media => "all" %>

  <%= stylesheet_link_tag    "all/fonts/icomoon/style.css", :media => "all" %>

  <%= stylesheet_link_tag    "all/login-style", :media => "all" %>

  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>

<!-- Login wrapper begins -->
<div id="login-wrap">
  <div id="login-inner">
    <div id="login-circle">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>

  </div>
</div>
<%= debug(params) if Rails.env.development? %>

<%= javascript_include_tag 'libs/jquery-1.8.2.js' %>
<%= javascript_include_tag 'libs/jquery.placeholder.min.js' %>
<%= javascript_include_tag 'login.js' %>
<%= javascript_include_tag 'js-plugins/jquery.uniform.min.js' %>


</body>
</html>